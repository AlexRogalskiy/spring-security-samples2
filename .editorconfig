[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=tab
indent_size=4

[{composer.lock,.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[*.java]
indent_style=tab
tab_width=4

[{*.cql,*.ddl,*.sql}]
indent_style=space
indent_size=2

[*.xml]
indent_style=tab
tab_width=1

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

